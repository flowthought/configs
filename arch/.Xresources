! Xterm defaults
xterm*termName: xterm-256color

! Font: Can switch between multiple. Apply changes with xrdb -merge ~/.Xresources
!xterm*faceName: DejaVu Sans Mono:size=11:antialias=true:style=Book
xterm*faceName: Inconsolata:size=18:style=Regular:antialias=true

! Login Shell
xterm*loginshell: true

! Double click to select whole words: https://unix4lyfe.org/xterm
xterm*charClass: 33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48

! Scrollback
xterm*savelines: 16384

! For Meta key to work
xterm*eightBitInput: false

! For selection to X11 clipboard
XTerm*selectToClipboard: true

! Solarized Dark
